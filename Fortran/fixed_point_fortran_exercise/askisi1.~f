      program ask1
      
      integer nmax,i,e
      double precision tol,x0,x1

      write(*,*)'dwse to x0'
      read(*,*)x0
      write(*,*)'dwse to tol'
      read(*,*)tol
      write(*,*)'dwse nmax'
      read(*,*)nmax
      
      x0=log10(x0)
      e=1
      x1=ffun(x0)
      i=1
   10 if(i .le. nmax) then
      write(*,*)'n=',i,'  y',i,'=',x0,'    ­(y',i,')=',ffun(x0),
     u'   |y',i,'-y',i-1,'|=',abs(x1-x0)
      if( abs(x1-x0) .le. tol) then
      write(*,*)'To stathero shmeio einai: ',x1
      i=nmax
      else
      e=e+1
      endif
      i=i+1
      x0=x1
      x1=ffun(x0)
      goto 10
      end if
      if( e .ge. nmax) then
      write(*,*)'Den epeteuthei sugklish se ',nmax,' epanalipseis'
      endif
      stop
      end
      
      
      
      
      function ffun(x0)
      double precision x0
      ffun=2*tanh(x0)
      return
      end
      
